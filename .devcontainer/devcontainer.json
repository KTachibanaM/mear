{
	"name": "Mear",
	"dockerComposeFile": "docker-compose.yml",
	"service": "devcontainer",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"initializeCommand": "docker network inspect mear-network || docker network create mear-network",
	"postCreateCommand": {
		"bootstrap-minio-source": "./.devcontainer/bootstrap-minio.sh minio-source src false",
		"bootstrap-minio-destination": "./.devcontainer/bootstrap-minio.sh minio-destination dst false",
		"bootstrap-minio-agent-binary": "./.devcontainer/bootstrap-minio.sh minio-agent-binary bin true"
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.go",
				"ms-vscode.makefile-tools",
				"GitHub.copilot-nightly",
				"GitHub.copilot-chat",
				"streetsidesoftware.code-spell-checker"
			]
			
		}
	}
}
